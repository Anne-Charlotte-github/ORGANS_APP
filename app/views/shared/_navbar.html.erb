<%# d√©pendance : layouts > application %>
<%# From modele le Wagon + bootstrap pour Search bar %>

<%# Logo vers Home %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "main-logo.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse"
          data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
          aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

<%# Form to Search %>
<div>Quel organe voulez-vous ?</div>
  <form class="d-flex">
      <input class="form-control" list="typeDatalistOptions" id="typeDataList" placeholder="Choisir un organe">
      <datalist id="typeDatalistOptions">
        <option value="Peu importe...">
        <% Organ::TYPES.each do |organ_type| %>
        <option value=<%=organ_type.capitalize%>>
        <% end %>
      </datalist>

      <input class="form-control" list="cityDatalistOptions" id="cityDataList" placeholder="Choisir une ville">
      <datalist id="cityDatalistOptions">
        <option value="Peu importe...">
        <% Organ::CITIES.each do |city| %>
        <option value=<%=city.capitalize%>>
        <% end %>
      </datalist>

    <input class="form-control me-2" type="search" id="dateDataList" placeholder="Choisir un jour" aria-label="Search">
    <%# ! ajouter calendrier %>

    <button class="btn btn-gradient" type="submit"> üîç </button>
  </form>

<%# User account %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My bookings", user_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= image_tag "user-photo-example.jpg", class: "avatar", alt: "avatar-large"%>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
