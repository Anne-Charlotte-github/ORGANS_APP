<%# BANNER %>
<div class="banner-perso">
  <div class="container">
    <h1>Envie de rester <strong> en vie </strong> ? </h1>
    <p> Louer des organes avec Orgarent !</p>
  </div>
</div>

<%# CATEGORIES CARDS %>
<div class="container category-container">
  <% Organ::TYPES.each do |organ_type| %>
      <%= link_to root_path('organ_type' => organ_type), class:'card-category' do %>
        <%= image_tag "organs_picto/#{organ_type}.svg" %>
        <p class="text-if-hover"> <%= organ_type.capitalize %> </p>
      <% end %>
  <% end %>
</div>

<%# ORGAN CARDS %>
<% if @organs.empty? %>
  <div id="search-failed"> Désolée, pas d'organe trouvé. Cherche encore !</div> <%# TODO : css de p %>
<% else %>
  <div class="container organ-container">
    <% @organs.each do |organ| %>
      <%= link_to organ_path(organ), class:'card-organ' do %>
        <%= image_tag "organs_picto/#{organ.organ_type}.svg" %> <%# TODO : upload images %>
        <div class="card-organ-infos">
          <h2><%= organ.organ_type %></h2>
          <p><%= "#{organ.price} €" %></p>
        </div>
        <div class="text-if-hover">Réserver</div>
      <% end %>
    <% end %>
  </div>
<% end %>
